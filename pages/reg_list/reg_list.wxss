.block
{
  width:auto;
  height:160rpx;
  display:flex;
  flex-direction:column;
  position:relative;
  padding:10rpx 30rpx;
  background-color:white;
  margin:30rpx 0px;
}

.in
{
  display:flex;
  flex-direction:row;
  align-items: center;
  height:50rpx;
  font-size:12pt;
}

.lt
{
  flex-grow:0;
}

.md
{
  flex-grow:6;
}

.rt
{
  flex-grow:0;
  text-align:right;
}

.block:before{
       content: '';
       position: absolute;
       height:1px;
       width:200%;
       left:0px;
       bottom:-1px;
       border-bottom: 1px solid #c0c0c0;
       transform-origin: 0 0;
       transform: scale(0.5, 0.5);
       box-sizing: border-box;
}


