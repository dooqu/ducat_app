.menu
{
  display:flex; flex-direction:row; border-width:0px 0px 1px 0px;margin:30rpx;height:120rpx;align-items:center;font-size:14pt;position:relative;
}

.memu view
{
  width:0px;flex-grow:1;display:flex;justify-content:center;
}

.menu:before{
       content: '';
       position: absolute;
       height:1px;
       width:200%;
       left:0px;
       bottom:-1px;
       border-bottom: 1px solid #c0c0c0;
       transform-origin: 0 0;
       transform: scale(0.5, 0.5);
       box-sizing: border-box;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.row_hover
{
  background-color:#efefef;
}